name: "Perceptual_CS"
input:"data"
input_dim: 1
input_dim:1
input_dim: 1052
input_dim: 710
layer {
  name: "conv1"
  type: "Convolution"
  bottom: "data"
  top: "conv1"
  param {
    lr_mult: 1
  }
  param {
    lr_mult: 2
  }
  convolution_param {
    num_output: 10
    pad: 0
    kernel_size: 32
    stride: 16
    weight_filler {
      type: "gaussian"
      std: 0.1
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}
layer
{
  name: "upsample"
  type: "Deconvolution"
  bottom: "conv1"
  top: "upsample"
  param
  {
    lr_mult: 1
    decay_mult: 1
  }
  param
  {
    lr_mult: 2
    decay_mult: 0
  }
  convolution_param
  {
    kernel_size: 32
    stride: 16
    num_output: 1
    #group: {{C}}
    #pad: {{ceil((factor - 1) / 2.)}}
    weight_filler:
    {
      type: "gaussian"
      std: 0.1
      # type: "constant"
      # value: 0.25
    }
    bias_filler
    {
      type: "constant"
      value: 0
    }
  }
}
layer {
  name: "conv1_r"
  type: "Convolution"
  bottom: "upsample"
  top: "conv1_r"
  param {
    lr_mult: 1
  }
  convolution_param {
    num_output: 64
    pad: 5
    kernel_size: 11
    stride: 1
    weight_filler {
      type: "gaussian"
      std: 0.001
    }
    bias_term: false
  }
}
layer {
  name: "relu1"
  type: "ReLU"
  bottom: "conv1_r"
  top: "conv1_r"
}

layer {
  name: "conv2_r"
  type: "Convolution"
  bottom: "conv1_r"
  top: "conv2_r"
  param {
    lr_mult: 1
  }
  convolution_param {
    num_output: 32
    pad: 0
    kernel_size: 1
    stride: 1
    weight_filler {
      type: "gaussian"
      std: 0.001
    }
  bias_term: false
  }
}

layer {
  name: "relu2"
  type: "ReLU"
  bottom: "conv2_r"
  top: "conv2_r"
}

layer {
  name: "conv3_r"
  type: "Convolution"
  bottom: "conv2_r"
  top: "conv3_r"
  param {
    lr_mult: 0.1
  }
  convolution_param {
    num_output: 1
    pad: 3
    kernel_size: 7
    stride: 1
    weight_filler {
      type: "gaussian"
      std: 0.001
    }
    bias_term: false
  }
}
layer {
        bottom: "upsample"
        bottom: "conv3_r"
        top: "res1"
        name: "res1"
        type: "Eltwise"
} 